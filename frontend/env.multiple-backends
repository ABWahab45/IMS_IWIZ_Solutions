# Multiple Backend Environment Configuration

# Backend Mode: 'render' or 'cloudflare'
REACT_APP_BACKEND_MODE=render

# Render Backend (Current Production)
REACT_APP_RENDER_API_URL=https://ims-iwiz-solutions.onrender.com/api
REACT_APP_RENDER_BACKEND_URL=https://ims-iwiz-solutions.onrender.com

# Cloudflare Backend (Future/Alternative)
# Replace with your actual Cloudflare tunnel URL
REACT_APP_CLOUDFLARE_API_URL=https://your-app-name.trycloudflare.com/api
REACT_APP_CLOUDFLARE_BACKEND_URL=https://your-app-name.trycloudflare.com

# Legacy support (for backward compatibility)
REACT_APP_API_URL=https://ims-iwiz-solutions.onrender.com/api
REACT_APP_BACKEND_URL=https://ims-iwiz-solutions.onrender.com
